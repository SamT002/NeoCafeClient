<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.neocafeteae1prototype.view.bottom_navigation_items.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_notification"
            app:destination="@id/notification" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_menuFragment"
            app:destination="@id/menuFragment"
            app:enterAnim="@anim/up_in"
            app:exitAnim="@anim/down_in"
            app:popEnterAnim="@anim/up_in"
            app:popExitAnim="@anim/down_in" />
        <action
            android:id="@+id/action_homeFragment_to_popularFragment"
            app:destination="@id/popularFragment"
            app:enterAnim="@anim/right_in"
            app:exitAnim="@anim/left_in"
            app:popEnterAnim="@anim/right_in"
            app:popExitAnim="@anim/left_in" />
    </fragment>
    <fragment
        android:id="@+id/notification"
        android:name="com.example.neocafeteae1prototype.view.notification.Notification"
        android:label="fragment_notification"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.neocafeteae1prototype.view.bottom_navigation_items.home.home_search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    +<fragment
        android:id="@+id/menuFragment"
        android:name="com.example.neocafeteae1prototype.view.bottom_navigation_items.home.menu.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_notification"
            app:destination="@id/notification" />
    <argument
        android:name="category"
        app:argType="string" />
</fragment>
    <fragment
        android:id="@+id/popularFragment"
        android:name="com.example.neocafeteae1prototype.view.bottom_navigation_items.home.popular_products.PopularFragment"
        android:label="fragment_popular"
        tools:layout="@layout/fragment_popular" >
        <action
            android:id="@+id/action_popularFragment_to_notification"
            app:destination="@id/notification" />
    </fragment>

</navigation>