<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView_Small_Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textView_size_16</item>
    </style>

    <style name="TextView_16sp_Thin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/textView_size_16</item>
    </style>

    <style name="TextView_14sp_Thin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/textView_size_14</item>
    </style>

    <style name="TextView_18sp_Thin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textView_size_18</item>
    </style>

    <style name="TextView_14sp_Roboto">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/textView_size_14</item>
    </style>

    <style name="TextView_14sp_Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textView_size_14</item>
    </style>

    <style name="TextView_18sp_Bold">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/textView_size_18</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>


    <style name="TextView_18sp_Roboto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/textView_size_18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextView_16sp_Roboto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/textView_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextView_16sp_Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/textView_size_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="CardView_Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="cardElevation">15dp</item>
        <item name="cardCornerRadius">15dp</item>
    </style>


    <style name="registration_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="registration_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">@dimen/margin_start_16_dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_start_16_dp</item>
        <item name="android:background">@drawable/button_disable_custom_item</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="registration_main_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Custom_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_60_dp</item>
        <item name="android:background">@color/main_purple_enable_color</item>
    </style>

    <style name="Toolbar_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextView_Main_Names">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">28sp</item>
    </style>


    <style name="default_nested_scroll_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fillViewport">true</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="default_vertical_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="toolbar_icon_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_small_5</item>
    </style>

    <style name="Constraint_Layout_Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="user_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginStart">@dimen/default_margin_start_16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_small_5</item>
        <item name="android:layout_marginEnd">@dimen/default_margin_start_16dp</item>
    </style>

    <style name="DemoTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/main_purple_enable_color</item>
        <item name="colorPrimaryDark">@color/main_purple_enable_color</item>
        <item name="colorAccent">@color/main_purple_enable_color</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/layout_top_rounded</item>
    </style>

    <style name="Collapsing_Layout_Default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Custom_Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_color</item>
        <item name="checkedIconTint">@color/white</item>
    </style>

    <style name="default_app_bar">
        <item name="android:background">@color/main_purple_enable_color</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_80_dp</item>
    </style>
</resources>