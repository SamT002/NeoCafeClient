<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="16dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="@dimen/default_margin_start_16dp"
    android:layout_marginEnd="@dimen/default_margin_start_16dp"
    android:layout_marginTop="15dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            style="@style/TextView_18sp_Roboto"
            android:layout_marginStart="@dimen/margin_30_dp"
            android:layout_marginTop="@dimen/default_margin_start_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Ваш заказ готов" />

        <TextView
            android:id="@+id/time"
            style="@style/TextView_14sp_Roboto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/default_margin_start_16dp"
            tools:text="18:15" />

        <TextView
            android:id="@+id/message"
            style="@style/TextView_16sp_Thin"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/margin_30_dp"
            android:layout_marginTop="@dimen/default_margin_start_16dp"
            android:layout_marginEnd="@dimen/margin_30_dp"
            android:maxLines="1"
            android:layout_marginBottom="@dimen/margin_15_dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.cardview.widget.CardView>